{
    "manifest_version": 2,

    "name": "__MSG_appName__",
    "description": "__MSG_description__",
    "version": "1.2",
    "default_locale": "zh_CN",

    "browser_action": {
        "default_icon": {
            "19": "imgs/icon-19.png",
            "38": "imgs/icon-38.png"
        }
    },
    "icons": {
        "256": "imgs/icon-256.png",
        "128": "imgs/icon-128.png",
        "16": "imgs/icon-16.png",
        "32": "imgs/icon-32.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "notifications",
        "contextMenus"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
